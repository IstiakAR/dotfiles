[colors]
background = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#222}
background-alt = ${xrdb:color10:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}
disabled = ${xrdb:color8:#222}


##################
#       BAR      #
##################


[bar/top]
background = ${colors.background}
foreground = ${colors.foreground}

width = 100%
height = 36
radius = 0
bottom = false
pseudo-transparency = true
dpi = 96

line-size = 3pt

border-size = 3px
border-color = ${colors.primary}
padding-left = 1
padding-right = 1

# module-margin = 1

font-0 = "JetBrainsMono Nerd Font:style=Bold:pixelsize=12;2"
font-1 = "Font Awesome 5 Free:style=Solid:pixelsize=12;1"
font-2 = "JetBrainsMono Nerd Font:style=Regular:pixelsize=14;5"


modules-left =  lb powermenu rb lb xworkspaces rb lb cava rb lb spotify rb
modules-center = lb xwindow rb 
modules-right =  lb memory sep cpu sep pulseaudio sep wireless-network sep date sep battery rb 

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true


#####################
#      MODULES      #
#####################

# Powermenu
[module/powermenu]
type = custom/text
content = ""
click-left = ~/.local/bin/rofi-power-menu &

# Workspaces
[module/xworkspaces]
type = internal/xworkspaces
label-active = %name%
#label-active-underline= ${colors.primary}
label-active-background= ${colors.background-alt}
label-active-foreground= ${colors.background}
label-active-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1

[module/cava]
type = custom/script
tail = true
exec = $HOME/.local/bin/cava.sh
format = <label>
format-foreground = ${colors.primary}
format-font = 5
label = %output%

# Spotify 
[module/spotify]
type = custom/script
exec = ~/.local/bin/spotify
interval = 10
format-prefix = "󰎇 "
click-left = playerctl --player=spotify previous
click-right = playerctl --player=spotify next
click-middle = playerctl --player=spotify play-pause
# format-underline = #1DB954


# Window Name
[module/xwindow]
type = internal/xwindow
label = %title:0:15:...%


# Memory
[module/memory]
type = internal/memory
interval = 5
format-prefix = ""
label = %percentage_used:4%%


# CPU
[module/cpu]
type = internal/cpu
interval = 5
format-prefix = ""
label = %percentage:4%%


# Volume
[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
format-volume = <ramp-volume> 
label-volume = %percentage%%
label-muted = " "
click-right = kitty -e pulsemixer

ramp-volume-0 = " "
ramp-volume-1 = " "
ramp-volume-2 = " " 
ramp-volume-3 = " "


# WiFi
[module/wireless-network]
type = internal/network
interface = wlan0
interface-type = wireless
format-connected = <ramp-signal>
format-disconnected = <label-disconnected>
label-disconnected =  󰤭
interval = 5.0

ramp-signal-0 = "󰤯 "
ramp-signal-1 = "󰤟 "
ramp-signal-2 = "󰤢 " 
ramp-signal-3 = "󰤥 "
ramp-signal-4 = "󰤨 "


# Date
[module/date]
type = internal/date
interval = 1
date = %H:%M
date-alt = %d-%m-%Y %H:%M:%S
label = %date%
label-foreground = ${colors.foreground}


# Battery
[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
poll-interval = 5
format-charging = ⚡ <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%

ramp-capacity-0 = 󰁺
ramp-capacity-1 = 󰁻
ramp-capacity-2 = 󰁾
ramp-capacity-3 = 󰂀
ramp-capacity-4 = 󰁹


################
#  Formatting  #
################

[module/lb]
type = custom/text
content = " [ "
content-foreground = ${colors.primary}
content-padding = 0


[module/rb]
type = custom/text
content = " ] "
content-foreground = ${colors.primary}
content-padding = 0


[module/sep]
type = custom/text
content = " | "
content-foreground = ${colors.disabled}
content-padding = 0


[settings]
screenchange-reload = true
pseudo-transparency = true



